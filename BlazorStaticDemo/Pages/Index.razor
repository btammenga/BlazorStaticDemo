@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.



<TabControl>

    <TabPage Title="Allereerste Tab 1">
        <h4> Inhoud van Tab 1</h4>
        <SurveyPrompt />
    </TabPage>

    <TabPage Title="Tab 2">
        <h4> Inhoud van Tab 2</h4>
        <SurveyPrompt />
    </TabPage>

    @for (int i = 3; i <= 5; i++)
    {
        int iLocal = i;
        <TabPage Title='@($"Tab {i}")'>
            <h4> Inhoud van Tab @iLocal</h4>
            <SurveyPrompt />
        </TabPage>
    }

    @if (DateTime.Today.Minute %2  != 0)
    {
        <TabPage Title="Uneven Minute!">
            <h4>Het is oneven minuut</h4>
        </TabPage>
    }

</TabControl>
